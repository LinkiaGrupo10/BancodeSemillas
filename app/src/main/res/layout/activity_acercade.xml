<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nubes_fondo"
    tools:context=".FragmentosAdministrador.AcercaDe">

    <!-- Recuadro para añadir el logo de la empresa -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/logo" />

    <!-- Cuadro de diálogo con la frase de la empresa -->
    <TextView
        android:id="@+id/fraseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:justificationMode="inter_word"
        android:textSize="18sp"
        android:text="@string/frase_empresa"/>

    <!-- Emoticonos de Facebook, Twitter e Instagram -->
    <ImageView
        android:id="@+id/facebookImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo_facebook" />

    <ImageView
        android:id="@+id/twitterImageView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/logo_twitter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/instagramImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/logo_instagram"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>