<androidx.cardview.widget.CardView
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="2dp"
    android:background="@drawable/nubes_fondo"
    app:contentPadding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F0FA"
        android:gravity="center"
        android:orientation="horizontal">


        <!-- FOTO DE PERFIL-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/PerfilGuardian"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/perfil_item" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="#ccffcc"
            android:orientation="vertical">

            <TextView
                android:id="@+id/NombreGuardianItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NombreGuardianItem"
                android:textColor="#084C5F"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CorreoGuardianItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/CorreoGuardianItem"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/detalles"
                android:background="@drawable/formabotones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="105dp"
                android:layout_marginStart="105dp"
                android:text="Detalles"
                android:textStyle="bold"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>