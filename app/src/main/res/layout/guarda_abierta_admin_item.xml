<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    android:elevation="2dp"
    android:background="@drawable/nubes_fondo"
    app:contentPadding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="#ccffcc"
    android:orientation="horizontal">


    <!-- FOTO DE SEMILLA-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/FotoSemillaGuarda"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/perfil_item"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E6F0FA"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/NombreCientificoItem"
            android:text="Nombre CientÃ­fico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#084C5F"/>

        <TextView
            android:id="@+id/NombreVulgarVariedadItem"
            android:text="Nombre Vulgar, Variedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>